generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id        String   @id @default(uuid())
  name      String
  password  String
  imageUrl  String   @db.Text
  email     String   @db.Text
  role      Role     @default(USER)
}

enum Role {
  ADMIN
  USER
}